<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4DC0C"
        android:gravity="center"
        android:text="Quản Trị Crub"
        android:textColor="#CC2F2F"
        android:textSize="35sp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Quản trị sản phẩm "
        android:textColor="#00BCD4"
        android:textSize="25sp"
        android:textStyle="bold"></TextView>
    <EditText
        android:id="@+id/edtTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sản phẩm"></EditText>
    <EditText
        android:id="@+id/edtGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá sản phẩm"></EditText>
    <EditText
        android:id="@+id/edtChiTiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chi tiết sản phẩm"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:lineHeight="@dimen/define_dimen_30"
        ></EditText>

    <Spinner
        android:id="@+id/spProductType"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </Spinner>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnThem"
            android:width="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm"></Button>
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"></View>
        <Button
            android:id="@+id/btnLuu"
            android:width="0dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa sản phẩm"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_huy"
            android:width="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy" />
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"></View>
        <Button
            android:id="@+id/btn_TrangChu"
            android:width="0dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang Chủ"
            ></Button>

    </LinearLayout>
    <ListView
        android:id="@+id/lvProductList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"></ListView>

</LinearLayout>