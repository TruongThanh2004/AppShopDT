<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainChiTietSanPham"
    android:fitsSystemWindows="true"

    >

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:gravity="center"
        android:padding="20dp"
        android:text="Chi Tiết sản phẩm"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/ivHinhAnh"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/dt"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvTenSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="abc"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ivHinhAnh"
        tools:layout_editor_absoluteX="92dp" />

    <TextView
        android:id="@+id/tvGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:text="Gia"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTenSP"
        tools:layout_editor_absoluteX="176dp" />

    <TextView
        android:id="@+id/tvChiTiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Chi Tiet"
        android:padding="10dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvGia"
        tools:layout_editor_absoluteX="31dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tvChiTiet"
        tools:layout_editor_absoluteX="66dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnMuaSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mua Sản Phẩm"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/red"
            />

        <Button
            android:id="@+id/btnThemGioHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giỏ Hàng"
            android:backgroundTint="@color/red"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>